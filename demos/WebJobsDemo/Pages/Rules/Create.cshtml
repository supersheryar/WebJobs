@page
@model WebJobsDemo.Pages.Rules.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Rule</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Rule.RuleName" class="control-label"></label>
                <input asp-for="Rule.RuleName" class="form-control" />
                <span asp-validation-for="Rule.RuleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rule.RulePriority" class="control-label"></label>
                <select asp-for="Rule.RulePriority" class="form-control"
                        asp-items="@new SelectList(Enum.GetNames(typeof(UkrGuru.WebJobs.Data.Priorities)))"></select>
                <span asp-validation-for="Rule.RulePriority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rule.ActionId" class="control-label"></label>
                <select asp-for="Rule.ActionId" class="form-control" asp-items="ViewBag.Actions"></select>
                <span asp-validation-for="Rule.ActionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rule.RuleMore" class="control-label"></label>
                <textarea asp-for="Rule.RuleMore" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Rule.RuleMore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group form-check">
                    <input asp-for="Rule.Disabled" class="form-check-input" />
                    <label asp-for="Rule.Disabled" class="form-check-label"></label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
