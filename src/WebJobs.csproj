<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Authors>Oleksandr Viktor (UkrGuru)</Authors>
    <Company>Oleksandr Viktor (UkrGuru)</Company>
    <Copyright>Oleksandr Viktor (UkrGuru)</Copyright>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageIcon>ukrguru-logo.jpg</PackageIcon>
    <RepositoryUrl>https://github.com/UkrGuru/WebJobs</RepositoryUrl>
    <Description>The UkrGuru.WebJobs package is a Scheduler and Worker for any your background Job. Supports cron in Rules. Provides extensibility for any custom Actions. Uses UkrGuru.SqlJson for database connection. </Description>
    <Version>3.3.4</Version>
    <SignAssembly>False</SignAssembly>
    <AssemblyOriginatorKeyFile>UkrGuru.pfx</AssemblyOriginatorKeyFile>
    <PackageTags>dotnet net6 sqlserver webjobs scheduler worker sql-server-procedures sendemail template</PackageTags>
    <PackageReleaseNotes>Updated UkrGuru.SqlJson to last version.</PackageReleaseNotes>
    <AssemblyName>UkrGuru.WebJobs</AssemblyName>
    <RootNamespace>UkrGuru.WebJobs</RootNamespace>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <DebugType>none</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
    <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Actions\CsvToJsonAction.cs" />
    <Compile Remove="Actions\RunApiHoleAction.cs" />
    <Compile Remove="Actions\SftpGetFilesAction.cs" />
    <Compile Remove="Actions\Url2HtmlAction.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Resources\1.9.9.1.Tables.sql" />
    <None Remove="Resources\1.9.9.2.Data.sql" />
    <None Remove="Resources\1.9.9.3.Funcs.sql" />
    <None Remove="Resources\1.9.9.4.Procs.sql" />
    <None Remove="Resources\2.1.0.sql" />
    <None Remove="Resources\2.4.3.sql" />
    <None Remove="Resources\3.3.2.sql" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="6.0.1" />
    <PackageReference Include="UkrGuru.SqlJson" Version="4.3.1" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\1.9.9.1.Tables.sql" />
    <EmbeddedResource Include="Resources\1.9.9.2.Data.sql" />
    <EmbeddedResource Include="Resources\1.9.9.3.Funcs.sql" />
    <EmbeddedResource Include="Resources\1.9.9.4.Procs.sql" />
    <EmbeddedResource Include="Resources\3.3.2.sql" />
    <EmbeddedResource Include="Resources\2.4.3.sql" />
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <EmbeddedResource Include="..\ukrguru-logo.jpg">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </EmbeddedResource>
  </ItemGroup>

</Project>
